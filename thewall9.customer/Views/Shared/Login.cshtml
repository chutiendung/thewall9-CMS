<!DOCTYPE html>
<html lang="en" data-ng-app="app">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="thewall9 - Portal Clientes">
    <meta name="author" content="thewall9">
    <title>THE WALL9 CMS - Portal clientes</title>
    <link href="~/wwwroot/build/css/login-vendors.min.css" rel="stylesheet" />
    <link href="~/wwwroot/build/css/login.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <div class="container" data-ng-controller="loginController">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" ng-submit="login()">
                            <fieldset>
                                <div data-ng-hide="message == ''" class="alert alert-danger">
                                    {{message}}
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail or UserName" type="text" name="loginData.userName" data-ng-model="loginData.userName" autofocus auto-fill-sync>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" type="password" name="loginData.password" data-ng-model="loginData.password" auto-fill-sync>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me" data-ng-model="loginData.useRefreshTokens">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var serviceBase = '@APP._API_URL';
    </script>
    <script src="~/wwwroot/build/js/login-vendors.min.js"></script>
    <script src="~/wwwroot/build/js/login.min.js"></script>
</body>
</html>