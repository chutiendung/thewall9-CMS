@model thewall9.data.binding.CategoryWeb
<a href="@Url.Action("Index", "Product", new { FriendlyUrl = Model.FriendlyUrl, CategoryID=Model.CategoryID })">
    @Model.CategoryName
</a>
@if (Model.CategoryItems.Count > 0)
{
    <ul>
        @foreach (var item in Model.CategoryItems)
        {
            <li>
                @Html.Partial("_Categories", item)
            </li>
        }
    </ul>
}
